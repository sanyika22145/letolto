<Window x:Class="DevGamingAutoInstaller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:DevGamingAutoInstaller.Converters"
        mc:Ignorable="d"
        Title="Dev &amp; Gaming Auto Installer" Height="720" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#0F1218" Foreground="#E6ECFF">

    <Window.Resources>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <converters:SelectionEnabledConverter x:Key="SelectionEnabledConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <CollectionViewSource x:Key="GroupedItems" Source="{Binding SoftwareItems}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="Category"/>
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>

        <Style TargetType="Button">
            <Setter Property="Background" Value="#1F2937"/>
            <Setter Property="Foreground" Value="#E6ECFF"/>
            <Setter Property="BorderBrush" Value="#2C3645"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.45"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#E6ECFF"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style TargetType="ProgressBar">
            <Setter Property="Height" Value="8"/>
            <Setter Property="Foreground" Value="#7AA2FF"/>
            <Setter Property="Background" Value="#1B2230"/>
        </Style>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.ColumnSpan="2" Margin="0 0 0 18">
            <TextBlock Text="Dev &amp; Gaming Auto Installer" FontSize="24" FontWeight="Bold"/>
            <TextBlock Text="Modern, moduláris telepítő Windows 10/11 rendszerekhez" Foreground="#8C98B3"/>
        </StackPanel>

        <Border Grid.Row="1" Grid.Column="0" Background="#141A24" CornerRadius="16" Padding="16" Margin="0 0 18 0">
            <StackPanel>
                <TextBlock Text="Gyors műveletek" FontWeight="SemiBold" FontSize="14" Margin="0 0 0 8"/>
                <Button Content="Összes kijelölése" Command="{Binding SelectAllCommand}" Margin="0 0 0 8"/>
                <Button Content="Csak fejlesztői" Command="{Binding SelectDevCommand}" Margin="0 0 0 8"/>
                <Button Content="Csak játék" Command="{Binding SelectGameCommand}" Margin="0 0 0 8"/>
                <Button Content="Csak alap programok" Command="{Binding SelectGeneralCommand}" Margin="0 0 0 8"/>
                <Button Content="Telepítettek ellenőrzése" Command="{Binding RefreshInstalledCommand}" Margin="0 0 0 18"/>

                <TextBlock Text="Telepítés" FontWeight="SemiBold" FontSize="14" Margin="0 0 0 8"/>
                <Button Content="Telepítés indítása" Command="{Binding StartInstallCommand}" Height="44" Background="#2D6AE3" BorderBrush="#2D6AE3" Margin="0 0 0 12"/>

                <ProgressBar Value="{Binding OverallProgress}" Maximum="100" Margin="0 0 0 6"/>
                <TextBlock Text="{Binding ProgressMessage}" FontSize="11" Foreground="#8C98B3" TextWrapping="Wrap" Margin="0 0 0 8"/>
                <TextBlock Text="{Binding StatusMessage}" FontSize="11" Foreground="#8C98B3" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Grid.Column="1" Background="#111621" CornerRadius="16" Padding="16">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Source={StaticResource GroupedItems}}">
                    <ItemsControl.GroupStyle>
                        <GroupStyle>
                            <GroupStyle.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}" FontSize="15" FontWeight="SemiBold" Margin="0 12 0 6"/>
                                </DataTemplate>
                            </GroupStyle.HeaderTemplate>
                        </GroupStyle>
                    </ItemsControl.GroupStyle>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#141B27" CornerRadius="12" Padding="12" Margin="0 6">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="160"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel>
                                        <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected}">
                                            <CheckBox.IsEnabled>
                                                <MultiBinding Converter="{StaticResource SelectionEnabledConverter}">
                                                    <Binding Path="DataContext.IsInstalling" RelativeSource="{RelativeSource AncestorType=Window}"/>
                                                    <Binding Path="IsInstalled"/>
                                                </MultiBinding>
                                            </CheckBox.IsEnabled>
                                        </CheckBox>
                                        <TextBlock Text="{Binding StatusMessage}" FontSize="11" Foreground="#8C98B3"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                        <TextBlock Text="{Binding Status}" FontSize="11" HorizontalAlignment="Right"/>
                                        <TextBlock Text="Telepítve" Foreground="#9BE7A4" FontSize="11" HorizontalAlignment="Right"
                                                   Visibility="{Binding IsInstalled, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
